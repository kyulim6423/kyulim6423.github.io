  <script>
    // Dynamic year
    document.getElementById("year").textContent = new Date().getFullYear();

    // Mobile nav toggle
    function toggleNav() {
      const navLinks = document.getElementById("nav-links");
      navLinks.classList.toggle("mobile-open");
    }

    // Smooth scrolling
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener("click", function (e) {
        const targetId = this.getAttribute("href").substring(1);
        const target = document.getElementById(targetId);
        if (!target) return;
        e.preventDefault();
        window.scrollTo({
          top: target.offsetTop - 80,
          behavior: "smooth"
        });
        const navLinks = document.getElementById("nav-links");
        if (navLinks.classList.contains("mobile-open")) {
          navLinks.classList.remove("mobile-open");
        }
      });
    });

    // Hero image carousel with dynamic captions from alt text
    (function () {
      const slides = document.querySelectorAll(".hero-photo-slide");
      const dots = document.querySelectorAll(".hero-photo-dot");
      const caption = document.querySelector(".hero-photo-caption");
      if (!slides.length) return;

      let current = 0;
      const intervalMs = 5000;
      let timer;

      function updateCaption() {
        const altText = slides[current].querySelector("img").alt;
        caption.style.opacity = 0;
        setTimeout(() => {
          caption.textContent = altText;
          caption.style.opacity = 1;
        }, 150);
      }

      function goToSlide(index) {
        slides[current].classList.remove("active");
        dots[current].classList.remove("active");

        current = index;

        slides[current].classList.add("active");
        dots[current].classList.add("active");
        updateCaption();
      }

      function nextSlide() {
        const next = (current + 1) % slides.length;
        goToSlide(next);
      }

      function startAuto() {
        timer = setInterval(nextSlide, intervalMs);
      }

      function resetAuto() {
        clearInterval(timer);
        startAuto();
      }

      dots.forEach(dot => {
        dot.addEventListener("click", () => {
          const index = Number(dot.getAttribute("data-index"));
          goToSlide(index);
          resetAuto();
        });
      });

      // Initialize
      updateCaption();
      startAuto();
    })();
  </script>
</body>
</html>
